{
  "manifest_version": 2,
  "name": "BlinkstickChrome",
  "short_name": "BlinkstickChrome",
  "description": "",
  "version": "0.0.4",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },

  "app": {
    "background": {
      "scripts": ["tcp-server.js","BlinkstickChromeTCPServer.js","background.js"]
    }
  },

  "permissions": [
    "system.network",
    "tabs",
    "usb",
    "hid",
    {
      "usbDevices": [
        {
          "vendorId": 8352,
          "productId": 16869
        }
      ]
    }
  ],
  "sockets": {
    "tcpServer": {
      "listen": ""
    }
  }
}
